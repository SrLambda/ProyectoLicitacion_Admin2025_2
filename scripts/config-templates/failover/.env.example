# ============================================================
# CONFIGURACIÓN AUTO-FAILOVER
# ============================================================
# Añadir estas variables a tu .env principal

# === Configuración de Auto-Failover ===
# Intervalo de verificación de salud del master (segundos)
FAILOVER_CHECK_INTERVAL=30

# Número de fallos consecutivos antes de ejecutar failover automático
FAILOVER_FAILURE_THRESHOLD=3

# === Configuración de Auto-Failback ===
# Intervalo de verificación del master original (segundos)
FAILBACK_CHECK_INTERVAL=60

# Número de checks exitosos consecutivos antes de considerar failback
FAILBACK_HEALTHY_THRESHOLD=5

# Ejecutar failback automáticamente (true) o solo notificar (false)
AUTO_FAILBACK_ENABLED=false

# === Notificaciones (Opcional) ===
# Webhook para notificaciones (Slack, Discord, Teams, etc.)
# Ejemplo Slack: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Ejemplo Discord: https://discord.com/api/webhooks/YOUR/WEBHOOK
FAILOVER_NOTIFICATION_WEBHOOK=

# === ProxySQL ===
# Ya definidos, pero necesarios para los daemons
PROXYSQL_ADMIN_USER=admin
PROXYSQL_ADMIN_PASSWORD=admin

# === MySQL ===
# Ya definidos
MYSQL_MASTER_HOST=db-master
MYSQL_SLAVE_HOST=db-slave
MYSQL_ROOT_PASSWORD=root_password_2025
